  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="style.css"> -->
    <%= stylesheet_link_tag 'style' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  </head>


  <%= render "/shared/navbarloggedin"%>
  <div class="jumbotron other-color">
      <div class="container-fluid">
            <div class="jumbotron other-color">
            <h2 style="margin-left: 450px; margin-top: 200px;">Share your ideas by creating a new forum</h2>
              <div class="container-fluid" style="margin-left: 650px; margin-top: 50px;">
              <button class="btn btn-success" data-toggle="modal" data-target="#create_forum">Create Forum</button>
        </div>
      </div>
    </div>
        </div>
      </div>
    </div>


    <div class="modal fade" id="create_forum" role="dialog">
        <div class="modal-dialog">

      <!-- Modal content-->
            <div class="modal-content" style="margin: 170px auto; width: 400px;">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h3 style="text-align: center;">Create forum</h3>
                </br>
                  <table class="table table-hover">
                <thead>

                </thead>
                <tbody>

                  <%= form_for :forum, url: forums_path do |f| %>

                <% if @forum.errors.any? %>
                  <div id="error_explanation">
                    <h2>
                      <%= pluralize(@forum.errors.count, "error") %> prohibited
                      this article from being saved:
                    </h2>
                    <ul>
                      <% @forum.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <p>
                  
                  <%= f.text_field :title, class: 'form-control', placeholder: "Title" %><br>
                </p>
               
                <p>
                  <%= f.text_area :description, class: 'form-control', placeholder: "Description" %><br>
                </p>

                <p>
                  <%= f.label :category, "Category" %>
                  <%= f.collection_select(:category, [Category.new(title: '- Select a category -')] + Category.all + [Category.new(title: 'Other')], :title, :title) %><br>
                  <label id="catLabel" style="visibility:hidden;">Please specify:</label>
                  <%= f.text_field :category, :id => 'cat', :name => 'forum[other_category]', :style => 'visibility:hidden;' %>
                </p>

                <script>
                    $('#forum_category').prepend('<option selected="selected">- Select a category -</option>');
                    $('#forum_category').append('<option value="Other">Other</option>');
                    document.getElementById("forum_category").onchange = function() {
                      var field = document.getElementById("cat");
                      var label = document.getElementById("catLabel");
                      if (this.value === "Other") {
                        field.style.visibility = "visible";
                        label.style.visibility = "visible";
                      }
                      else {
                        field.style.visibility = "hidden";
                        label.style.visibility = "hidden";
                      }
                    }
                </script>

                <p>
                  <%= f.radio_button :privacy, "1" %>
                  <%= f.label :privacy, "Public" %> &nbsp &nbsp
                  <%= f.radio_button :privacy, "2" %>
                  <%= f.label :privacy, "Private" %><br>
                </p>
               
                <p>
                  <%= f.submit "Create Forum", class: "btn btn-primary", style: "margin-left: 250px;" %>
                </p>

                
              <% end %>

                </tbody>
            </table>

              </div>

              <!-- <div class="modal-body">
                  <p>Some text in the modal.</p>

<body>

	<%= render "/shared/navbarloggedin" %>
	<div  style="margin: 100px 0 0 0; top:30%; height:500px;">
		<div >
			<% seenNotifications = [] %>
		<% @notifications.reverse_each do |notification| %>
			<% if !notification.seen %>
			<p><a href="<%= notification.link %>" class="glyphicon glyphicon-star"> </a><%= notification.info %> <%= link_to 'delete', ('notifications/' + notification.id.to_s), method: :get %></p>
			<% notification.update(seen: true) %>
				<% seenNotifications += [notification] %>
			<%end%>
		<%end%>
		</div>
		<div style="" >
			<% @notifications.reverse_each do |notification| %>
			<% if notification.seen and !seenNotifications.include? notification %>
				<p>
					<a href="<%= notification.link %>" class="glyphicon glyphicon-star-empty"> </a><%= notification.info %> <%= link_to 'delete', ('notifications/' + notification.id.to_s), method: :get %>
				</p>
				<% notification.update(seen: true) %>
				<% seenNotifications += [notification] %>
			<%end%>
		<%end%>
		</div>

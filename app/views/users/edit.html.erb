
 

<div class="mainDiv" id="mainDiv">
<div class="headerlist">
<ul id="menu">
<li > Logo</li>

 <li><img src="http://www.capgemini.com/sites/default/files/styles/cap_image_165x112/public/ideas_icon_blue_4.png?itok=ymV_q58q" width="41" height="40" style=" left: 105px; width: 35px; height: 32px;"/></li>
 <% if current_user != nil %>
 <li><%= link_to "friend requests" , friendships_path %></li>
 <li><%= link_to "Log out", logout_path, method: :delete %></li>
  <li> <%= link_to "My Profile" , :action => :profile %> </li>
 <% if !Admin.where(user_id: current_user.id).empty? %>
 <li><%= link_to "requests to join my forums", :action => :admin_join_forums_requests %> </li>
 <% end %>
 <% end %>

</ul>  
</div>
<div style="position:relative; top:150px;">
<%= form_for(current_user) do |f| %>
    <h1>Edit form</h1>
<% if current_user.errors.any? %>
      <h3>Errors</h3>
      <ul>
        <% current_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="side" style="position: fixed; left: 23px; top: 181px;">

  <ul>
  <li>
    <a class='list-item' href='/forums'>
      Privacy
    </a>
  </li>
  <li>
    <a class='list-item' href='/friendships'>
      Pass
      word
    </a>
    </li>
    <li>
    <a class='list-item' href='/friendships'>
      Info  </a>
  </li>

</ul>
</div>
  <div style ="position:absolute; top:50px; left:150px; ">
           <div class="field">
      <%= f.label :full_name %><br>
      <%= f.text_field :full_name %><br>
     </div> 

     <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username %><br>
     </div>

     <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email %><br>
     </div>

     <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %><br>
     </div>

     <div class="field">
      <%= f.label :password_confirmation, 'Confirm password' %><br>
      <%= f.password_field :password_confirmation %><br>
     </div>
   
     <div class="field">
      <%= f.label :gender %><br>
      <%= f.select :gender, ['Male', 'Female'] %><br>
     </div>   

     <div class="field">
      <%= f.label :password_question, "Choose a question (in case you forgot the password)" %><br>
      <%= f.select :password_question, ['What is the name of your best friend?', 'What is the name of your pet?', 'Who was your first English teacher?'] %><br>
     </div> 

     <div class="field">
      <%= f.label :Your_answer %><br>
      <%= f.text_field :answer_for_password_question %><br><br>
     </div>
     <div>
         <p>
    <%= f.label :privacy, "Public" %>
    <%= f.radio_button :privacy, 1 %><br>
    <%= f.label :privacy, "Private" %>
    <%= f.radio_button :privacy, 2 %><br>
  </p>
     </div>
     <div class='actions'>
      <%= f.submit "Update Information" %>
     </div>
     </div>
<% end %>
</div>
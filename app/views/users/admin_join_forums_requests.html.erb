<p>Requests to join my Forums: </p>
<table>
  
  <% if @requests == nil %>
  <p> No new requests </p>
  <% else %>
  <tr>
    <th>Forum</th>
    <th>User</th>
    <th></th>
    <th></th>

  </tr>
  <% @requests.each do |request| %>
    <tr>
      <td>
      		<%= request.forum_id %>
      </td>
      <td>
      		<%= request.user_id  %>
      </td>
      		<%= request.accept %>
      </td>
      <td>
      		

         
            <%= link_to "[Accept]", "/users/accept_join_request?forum=#{request.forum_id}&user=#{request.user_id}" %> |

      </td>
      <td>
      		
            <%= link_to "[Reject]", "/users/reject_join_request?forum=#{request.forum_id}&user=#{request.user_id}" %>
      </td>
      
      
      <% end %>
    </tr>
  <% end %>
</table>


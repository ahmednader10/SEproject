<div class="foroums">
<table width="371" height="51">
<tr>
	<th width="110"  id="forumcolum"> Forum</th>
</tr>

<%  x = Forum.where(user_id: @current_user.id).order(:title) %>
<% x.each do |forum| %>
<tr>
<td id="forumcolumn"><%=  link_to forum.title , forum %></td>
</tr>
<% end %>

</table>
<% if x.size == 0 %>
<em> forumless </em>
<% end %>
</div>
<div class= " ideaslist">
  <table width="371" height="51">
<tr>
    <th width="57" id="ideatitlecolumn"> Title</th>
	<th width="160" id="ideacolumn"> Idea</th>
	<th width="110" id="forumcolum"> Forum</th>
</tr>
<%  x = Idea.where(user: @current_user).order(:text) %>
<% x.each do |idea| %>
<tr>
<td id="ideatitlecolumn"><%= link_to idea.title , ':forum_id/ideas/:idea_id' %></td>
<td id="ideacolumn"><%=  idea.text %></td>
<td id="forumcolum"> <%= link_to idea.forum.title , idea.forum %>  </td>
</tr>
<% end %>
</table>
<% if x.size == 0 %>
<em> still Idealess </em>
<% end %>


</div>
